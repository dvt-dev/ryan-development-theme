<div class="homepage-banner">
  <img src="{{ 'banner.webp' | asset_url }}" alt="Welcome to Shopify Theme Development" class="banner-image" width="100%" height="400">
  <div class="banner-overlay">
    <div class="banner-content">
      <h1>Conquer Every Slope</h1>     
      <a href="{{ routes.all_products_collection_url }}" class="banner-button">Shop Now</a>
    </div>
  </div>
</div>

{% stylesheet %}
  .homepage-banner {
    position: relative;
    overflow: hidden;
  }

  .banner-image {
    width: 100vw;
    height: 400px;
    object-fit: cover;
    display: block;
  }

  .banner-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    pointer-events: none;
  }

  .banner-content {   
    color: #fff;
    text-align: center;
    pointer-events: auto;
  }

  .banner-content h1 {
    font-size: 4rem;
    font-weight: 200;
  }

  .banner-button {
    display: inline-block;
    margin-top: 16px;
    padding: 12px 32px;
    background: transparent;;
    color: #fff;
    /* font-weight: bold; */
    font-size: 1rem;
    border-radius: 4px;
    text-decoration: none;
    border: 2px solid #fff;
    transition: background-color 0.3s, color 0.3s;
  }

  .banner-button:hover {
    background-color: #fff;
    color: #000;
  }  
{% endstylesheet %}

